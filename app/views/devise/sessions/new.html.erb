<center>
  <h2 class="text-white">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :phone, class: "text-white" %><br />
      <%= f.text_field :phone, class: "rounded", autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password, class: "text-white" %><br />
      <%= f.password_field :password, class: "rounded", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "text-white" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>

<center>
